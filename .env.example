# Server Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MySQL Configuration (Optional - for MPOS mode)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=pool_user
MYSQL_PASSWORD=
MYSQL_DATABASE=mining_pool

# Clustering
CLUSTER_ENABLED=true
CLUSTER_WORKERS=auto

# CLI Port
CLI_PORT=17117

# Website Configuration
WEBSITE_ENABLED=true
WEBSITE_PORT=80
WEBSITE_HOST=0.0.0.0
STRATUM_HOST=your-pool.com

# Stats Configuration
STATS_UPDATE_INTERVAL=15
STATS_RETENTION_SECONDS=43200
HASHRATE_WINDOW=300

# Security
API_RATE_LIMIT=100
API_RATE_WINDOW=15
ENABLE_CORS=true
ADMIN_PASSWORD=changeme

# Pool Defaults
BLOCK_REFRESH_INTERVAL=1000
JOB_REBROADCAST_TIMEOUT=55
CONNECTION_TIMEOUT=600
VALIDATE_WORKER_USERNAME=true

# Banning
BANNING_ENABLED=true
BANNING_TIME=600
BANNING_INVALID_PERCENT=50
BANNING_CHECK_THRESHOLD=500
BANNING_PURGE_INTERVAL=300
