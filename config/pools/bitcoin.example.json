{
  "enabled": true,
  "name": "bitcoin",
  "coin": "bitcoin.json",
  
  "address": "your-bitcoin-address-here",
  
  "rewardRecipients": {
    "your-fee-address": 1.5,
    "donation-address": 0.1
  },
  
  "paymentProcessing": {
    "enabled": true,
    "interval": 30,
    "minimumPayment": 0.01,
    "daemon": {
      "host": "127.0.0.1",
      "port": 8332,
      "user": "bitcoinrpc",
      "password": "your-rpc-password"
    }
  },
  
  "ports": {
    "3333": {
      "diff": 32,
      "varDiff": {
        "minDiff": 8,
        "maxDiff": 512,
        "targetTime": 15,
        "retargetTime": 90,
        "variancePercent": 30
      }
    },
    "3334": {
      "diff": 256
    }
  },
  
  "daemons": [
    {
      "host": "127.0.0.1",
      "port": 8332,
      "user": "bitcoinrpc",
      "password": "your-rpc-password"
    }
  ],
  
  "confirmations": 100,
  "maxConnections": 10000,
  "connectionTimeout": 600,
  "validateWorkerUsername": true,
  
  "banning": {
    "enabled": true,
    "time": 600,
    "invalidPercent": 50,
    "checkThreshold": 500,
    "purgeInterval": 300
  }
}
